<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="phlcPU" transaction-type="JTA">
    <jta-data-source>jdbc/phlc</jta-data-source>
    <class>com.macphelasystem.phlc.entities.Client</class>
    <class>com.macphelasystem.phlc.entities.Consignment</class>
    <class>com.macphelasystem.phlc.entities.Invoice</class>
    <class>com.macphelasystem.phlc.entities.InvoiceItem</class>
    <class>com.macphelasystem.phlc.entities.InvoicePayment</class>
    <class>com.macphelasystem.phlc.entities.Staff</class>
    <class>com.macphelasystem.phlc.entities.UserAccount</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
